{
    "id": "basic",
    "name": "W20 training fragment",

    "modules": {
        "content": {
            "path": "{basic}/modules/content",
            "autoload": true
        },
        "user": {
            "path": "{basic}/modules/user",
            "autoload": true
        }
    },

    "i18n": {
        "en": ["{basic}/i18n/messages-en.json"],
        "fr": ["{basic}/i18n/messages-fr.json"]
    },

    "routes": {
        "content":{
            "templateUrl":"{basic}/views/content.html",
            "controller":"ContentController"
        },
        "user":{
            "templateUrl":"{basic}/views/user.html",
            "controller":"UserController"
        }
    }
}